<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta Ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta</p>

      <%- include('includes/messages'); %>

      <div class="row">

        <div class="col-lg">
          <h4>Faça seu cadastro</h4>

          <form class="from-cadastro" action="/login/register" method="post">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label >Endereço de email</label>
              <input type="email" class="form-control" name="email" placeholder="Seu email">
            </div>
            <div class="form-group">
              <label>Senha</label>
              <input type="password" class="form-control" name="password" placeholder="Senha">
            </div>
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>

        </div>

        <div class="col-lg">
          <h4>Faça seu login</h4>

          <form class="from-login" action="/login/login" method="post">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label >Endereço de email</label>
              <input type="email" class="form-control" name="email" placeholder="Seu email">
            </div>
            <div class="form-group">
              <label>Senha</label>
              <input type="password" class="form-control" name="password" placeholder="Senha">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>

        </div>

      </div>

    </div>
    <div class="col-lg-2"></div>
    </div>
  </div>

  </div>

</div>

<%- include('includes/footer') %>
